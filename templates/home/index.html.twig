{% extends 'base.html.twig' %} {% block title %}Home{% endblock %} {% block body
%}
<main class="container d-flex">
    <div class="row justify-content-center mt-3">
        <h1>Last Release :</h1>
        <hr class="m-3" />
        {% for manga in mangas %}
        <div
            class="manga-container rounded-3 bg-white shadow container border p-2 m-3 col-11 col-sm-5 col-md-5 col-lg-3"
        >
            {% include "_watchListButton.html.twig" %}
            <div class="row">
                <div class="container col-6">
                    <div class="img-container">
                        <img
                            class="img-fluid"
                            width="100%"
                            src="{{manga.0.image}}"
                            alt="{{manga.0.title}}"
                        />
                    </div>
                </div>
                <div class="col-6 d-flex flex-column">
                    <a href="{{ path('manga_show', {'slug': manga.0.slug}) }}">
                        <h3 class="fs-6">{{manga.0.title}}</h3>
                    </a>
                    <a
                        href="{{ path('chapter_show', {'slug': manga.0.slug, 'chapter': manga[1].id }) }}"
                        ><button class="btn btn-secondary chapter">
                            Chapter {{ manga[1].number }}
                            {% if manga.2 %} new {% endif %}
                        </button>
                    </a>
                    {% if manga[1].number > 1 %}
                    <a
                        href="{{ path('chapter_show', {'slug': manga.0.slug, 'chapter': manga[1].id -1 }) }}"
                        ><button class="btn btn-secondary mt-1 chapter">
                            Chapter {{ manga[1].number - 1 }}
                            {% if manga.2 %} new {% endif %}
                        </button>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</main>

{% endblock %}
