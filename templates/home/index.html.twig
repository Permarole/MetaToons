{% extends 'base.html.twig' %} {% block title %}Home{% endblock %} {% block body
%}
<main class="container d-flex bg-white">
    <div class="row justify-content-center mt-5">
        <h1>Last Release : </h1>
        <hr class="m-5">
        {% for manga in mangas %}
        <div
            class="manga-container container border m-3 col-sm-12 col-md-5 col-lg-3"
        >
            <div class="row">
                <div class="container col-6">
                    <img
                        class="img-fluid"
                        width="100%"
                        src="{{manga.0.image}}"
                        alt="{{manga.0.title}}"
                    />
                </div>
                <div class="col-6">
                    <a href="{{ path('manga_show', {'slug': manga.0.slug}) }}">
                        <h3 class="fs-6">{{manga.0.title}}</h3>
                    </a>
                    <a
                        href="{{ path('chapter_show', {'slug': manga.0.slug, 'chapter': manga[1][0].id }) }}"
                        ><button class="btn btn-secondary">
                            Chapter {{ manga[1][0].number }}
                            {% if manga.2 %} new {% endif %}
                        </button>
                    </a>
                    {% if manga[1][0].number > 1 %}
                    <a
                        href="{{ path('chapter_show', {'slug': manga.0.slug, 'chapter': manga[1][0].id -1 }) }}"
                        ><button class="btn btn-secondary mt-1">
                            Chapter {{ manga[1][0].number - 1 }}
                            {% if manga.2 %} new {% endif %}
                        </button>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</main>

{% endblock %}
